<!DOCTYPE html>
<html lang="en">
    
    <!-- THE HEAD TAG PARTIAL -->
    <%- include("../partials/head") %>

    <body>
        <!-- THE HEADER TAG PARTIAL -->
        <%- include("../partials/header") %>
        <main>
            <h2 class="subtitle is-2">Songs</h2>

            <a href="/dashboard">DASHBOARD</a>

               <h3 class="title is-3"><%= song.text %></h3>

        
            <form action="/songs/<%= song._id %>?_method=PUT" method="post">    
                <input class="input" type="text" name="text" placeholder="new song" value="<%= song.text %>"
                <input class="button" type="submit" value="edit song" />
            </form>

            <form action="/songs/<%= song._id %>?_method=delete" method="post">    
                <input class="button" type="submit" value="delete song" />
            </form>


        </main>
        <!-- THE HEAD TAG PARTIAL -->
        <%- include("../partials/footer") %>
    </body>
</html>