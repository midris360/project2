<!DOCTYPE html>
<html lang="en">
    
    <!-- THE HEAD TAG PARTIAL -->
    <%- include("../partials/head") %>

    <body>
        <!-- THE HEADER TAG PARTIAL -->
        <%- include("../partials/header") %>
        <main>
            <h2 class="subtitle is-2">Songs</h2>
            <a href="/dashboard">DASHBOARD</a>

            <% for (song of songs) { %>

                <a href="/songs/<%= song._id %>"><h3><%= song.text %></h3></a>

            <% } %>
            <form action="/songs/" method="post">    
                <input class="input" type="text" name="text" placeholder="new song" />
                <input class="button" type="submit" value="create song" />
            </form>


        </main>
        <!-- THE HEAD TAG PARTIAL -->
        <%- include("../partials/footer") %>
    </body>
</html>